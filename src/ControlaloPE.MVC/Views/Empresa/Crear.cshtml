@model CrearEmpresaViewModel

<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <form method="post" asp-action="Crear" asp-controller="Empresa">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Crear</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label class="form-label">Nombre <span class="danger">*</span></label>
                        <input type="text" asp-for="Nombre" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">RUC <span class="danger">*</span></label>
                        <input type="text" asp-for="Ruc" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Logo <span class="danger">*</span></label>
                        <input type="file" asp-for="LogoFile" class="form-control" />
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <button class="btn btn-success">Crear</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/js/empresa/crear.js" asp-append-version="true"></script>
}