@model CrearPersonaViewModel

<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <form method="post" asp-action="Crear" asp-controller="Persona">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Crear</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label class="form-label">Nombre <span class="danger">*</span></label>
                        <input type="text" asp-for="Nombre" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Apellido Paterno <span class="danger">*</span></label>
                        <input type="text" asp-for="ApellidoPaterno" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Apellido Materno <span class="danger">*</span></label>
                        <input type="text" asp-for="ApellidoMaterno" class="form-control" />
                    </div>
                   <div class="form-group">
                        <label class="form-label">Fecha Nacimiento</label>
                        <input type="date" asp-for="FechaNacimiento" class="form-control" />
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <button class="btn btn-success">Crear</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/js/persona/crear.js" asp-append-version="true"></script>
}